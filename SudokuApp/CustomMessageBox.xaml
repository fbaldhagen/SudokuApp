<Window x:Class="SudokuApp.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="200" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageText" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="YesButton" Content="Yes" Width="100" Margin="5" Click="YesButton_Click"/>
            <Button x:Name="NoButton" Content="No" Width="100" Margin="5" Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
